@model MVC_App.Domain.Models.RelationListViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form method="get">
    <div class="form-inline">
        <label class="control-label">Категория: </label>
        @Html.DropDownList("categoryId", Model.Categories as SelectList,
                    htmlAttributes: new { @class = "form-control" })
        <input type="submit" value="Фильтр" class="btn btn-default" />
    </div>
</form>

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.RelationViewModels.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RelationViewModels.First().FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RelationViewModels.First().Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RelationViewModels.First().TelephoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RelationViewModels.First().CountryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RelationViewModels.First().City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RelationViewModels.First().Street)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RelationViewModels.First().PostalCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RelationViewModels.First().StreetNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.RelationViewModels) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FullName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TelephoneNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.Countries.First(p => p.Id == item.CountryId).Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.City)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Street)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PostalCode)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StreetNumber)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
