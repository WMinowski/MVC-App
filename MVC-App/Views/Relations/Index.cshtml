@model MVC_App.Domain.Models.RelationListVM

@{
    ViewBag.Title = "Index";

}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form method="get">
    <div class="form-inline">
        <label class="control-label">Категория: </label>
        @Html.DropDownList("categoryId", Model.Categories as SelectList,
                    htmlAttributes: new { @class = "form-control" })
        <input type="submit" value="Фильтр" class="btn btn-default" />
    </div>
</form>

<table class="table">
    <tr>

        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = Model.SortOrderByName })
        </th>
        <th>
            @Html.ActionLink("Full Name", "Index", new { sortOrder = Model.SortOrderByFullName })
        </th>
        <th>
            @Html.ActionLink("Email", "Index", new { sortOrder = Model.SortOrderByEmail })
        </th>
        <th>
            @Html.ActionLink("Telephone Number", "Index", new { sortOrder = Model.SortOrderByTelephoneNumber })
        </th>
        <th>
            @Html.ActionLink("Country", "Index", new { sortOrder = Model.SortOrderByCountry })
        </th>
        <th>
            @Html.ActionLink("City", "Index", new { sortOrder = Model.SortOrderByCity })
        </th>
        <th>
            @Html.ActionLink("Street", "Index", new { sortOrder = Model.SortOrderByStreet })
        </th>
        <th>
            @Html.ActionLink("Postal Code", "Index", new { sortOrder = Model.SortOrderByPostalCode })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RelationViewModels.First().StreetNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.RelationViewModels) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FullName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TelephoneNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.Countries.First(p => p.Id == item.CountryId).Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.City)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Street)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PostalCode)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StreetNumber)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
